<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00DDD4D4"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="5">

    <TextView
        android:id="@+id/tv_base_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:gravity="center"
        android:text="@string/base_title"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/base_et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom|center"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="30dp"
            android:text="0"
            android:textSize="24sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/base_tv_chooseInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="@string/length_tv_chooseInput"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/base_spinner_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="40dp" />

        <TextView
            android:id="@+id/base_tv_chooseTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="@string/length_tv_chooseTarget"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/base_spinner_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="40dp" />

        <TextView
            android:id="@+id/base_tv_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/base_cal"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/all_cal"
        android:textSize="20sp" />

    <Button
        android:id="@+id/base_back"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/all_back"
        android:textSize="20sp" />

</GridLayout>